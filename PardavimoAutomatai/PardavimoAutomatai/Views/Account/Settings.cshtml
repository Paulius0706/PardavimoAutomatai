@model PardavimoAutomatai.Models.User

@{
    ViewBag.Title = "Account settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    // check if user is logged in
    //
    if (Session["userid"] == null)
    {
        Response.Redirect("~/Login/CreateWindow");
    }
}
<h2>Account settings</h2>

<table>
    <tr>
        <td>@Html.LabelFor(m => m.Name) </td>
        <td>@Html.Raw(Model.Name) </td>
        <td><a>Redaguoti</a></td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Surname) </td>
        <td>@Html.Raw(Model.Surname) </td>
        <td><a>Redaguoti</a></td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.LoginName) </td>
        <td>@Html.Raw(Model.LoginName) </td>
        <td><a>Redaguoti</a></td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Phone) </td>
        <td>@Html.Raw(Model.Phone) </td>
        <td><a>Redaguoti</a></td>
    </tr>
    <tr>
        <td>@Html.LabelFor(m => m.Email)</td>
        <td>@Html.Raw(Model.Email)</td>
        <td><a>Redaguoti</a></td>
    </tr>
</table>
