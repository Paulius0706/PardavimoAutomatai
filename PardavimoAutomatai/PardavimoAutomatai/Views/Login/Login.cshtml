@model PardavimoAutomatai.Models.User

@{
    ViewBag.Title = "Login window";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    // check if user is already logged in
    //
    if (Session["userid"] != null)
    {
        Response.Redirect("~/Home/OpenMainMenu");
    }
}
<h2>Login window</h2>


@{
    // variables
    string loginName = "";
    string password = "";
}
@using (Html.BeginForm("CheckLoginInformation", "Login", new { loginName = loginName, password = password }))
{
    <table>
        <tr>
            <td>Username: </td>
            <td>@Html.TextBoxFor(m => loginName)</td>
        </tr>
        <tr>
            <td>Password: </td>
            <td>@Html.PasswordFor(m => password)</td>

        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="Login" /></td>
        </tr>
    </table>
}
